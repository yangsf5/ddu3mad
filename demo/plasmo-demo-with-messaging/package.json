{
  "name": "plasmo-demo-with-messaging",
  "displayName": "Plasmo demo with messaging",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "3Mad",
  "scripts": {
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 1947",
    "build": "run-s build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build",
    "package": "plasmo package"
  },
  "dependencies": {
    "next": "13.2.4",
    "plasmo": "0.67.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@plasmohq/messaging": "0.1.6"
  },
  "devDependencies": {
    "@types/chrome": "0.0.224",
    "@types/node": "18.15.3",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "prettier": "2.8.4",
    "typescript": "4.9.5",
    "@plasmohq/prettier-plugin-sort-imports": "3.6.3",
    "@plasmohq/rps": "1.8.4"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "host_permissions": [
      "https://*/*"
    ]
  }
}
